{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block nav %}
{% endblock %}
{% block body %}
<div class="register-page">
    <div class="register-hero">
        <img src="{{ asset('img/site/log.jpeg') }}" alt="DragonTable">
    </div>

    <div class="register-form-container">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <img src="{{ asset('img/site/logo.png') }}" alt="DragonTable" class="register-logo">

        <h1>Enregistrement</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.username, {
                label: 'Nom d\'utilisateur'
            }) }}
            {{ form_row(registrationForm.email, {
                label: 'Adresse e-mail'
            }) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
            }) }}
            {{ form_row(registrationForm.agreeTerms) }}
            <button type="submit" class="btn btnsolid btnoutline ">Enregistrement</button>
        {{ form_end(registrationForm) }}
        <a href="{{ path('app_login') }}"class="back nostyle"  >Connexion</a>
        <a href="{{ path('app_home')}}" class="btn back"=>Revenir sur le site</a>

        
    </div>
</div>
{% endblock %}