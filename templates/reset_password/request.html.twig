{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block nav %}
{% endblock %}

{% block body %}
<div class="register-page">
    <div class="register-hero">
        <img src="{{ asset('img/site/log.jpeg') }}" alt="DragonTable">
    </div>

    <div class="register-form-container">
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger">{{ flash_error }}</div>
        {% endfor %}

        <img src="{{ asset('img/site/logo.png') }}" alt="DragonTable" class="register-logo">

        <h1>Mot de passe oublié</h1>

        {{ form_start(requestForm) }}
            {{ form_row(requestForm.Email, {
                label: 'Adresse e-mail'
            }) }}

            <p class="form-hint">
                Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
            </p>

            <button class="btn btnsolid btnoutline" type="submit">Envoyer le lien</button>
        {{ form_end(requestForm) }}

        <div class="register-links">
            <a href="{{ path('app_login nostyle')}}">Retour à la connexion</a>
        </div>
    </div>
</div>
{% endblock %}