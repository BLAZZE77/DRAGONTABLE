<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
      </head>

<body>
  {% block nav %}
    <nav class="nav">
      <div class="navlogo">
        <img src="{{ asset('img/site/logo.png') }}" alt="DragonTable logo">
        <a href="{{ path('app_home') }}">DragonTable</a>
      </div>

    <div class="navburger" id="navBurger">
      <span></span>
    </div>
      <div class="navmenu" id="navMenu">
        <ul class="navlink">
          <li><a href="{{ path('app_character') }}">Personnage</a></li>
          {#  <li><a href="">Trouver une table</a></li> #}
        </ul>
        <div class="navactions">
          {% if app.user %}
              <a href="{{ path('app_logout') }}" class="btn btnsolid">Deconnexion</a>
          {% else %}
              <a class="btn btnoutline" href="{{ path('app_login') }}">Connexion</a>
              <a class="btn btnsolid" href="{{ path('app_register') }}">Enregistrement</a>
          {% endif %} 
        </div>
      </div>
    </nav>
    {% endblock %}
  {% block body %}{% endblock %}

  {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    <script>
        document.getElementById('navBurger').addEventListener('click', function() {
          this.classList.toggle('is-active');
          document.getElementById('navMenu').classList.toggle('is-active');
        });
    </script>
  {% endblock %}
    </body>
</html>
